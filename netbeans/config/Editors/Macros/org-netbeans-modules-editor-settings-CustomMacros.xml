<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE editor-macros PUBLIC "-//NetBeans//DTD Editor Macros settings 1.1//EN" "http://www.netbeans.org/dtds/EditorMacros-1_1.dtd">
<editor-macros>
    <macro name="var_dump" xml:space="preserve">
        <shortcut keystrokes="INSERT$V"/>
        <code><![CDATA[copy-to-clipboard "var_dump("
paste-from-clipboard ")"]]></code>
    </macro>
    <macro name="complete_line" xml:space="preserve">
        <shortcut keystrokes="INSERT$SEMICOLON"/>
        <code><![CDATA[split-line
caret-down
caret-end-line ";"
caret-begin-line
selection-begin-line remove-selection
delete-previous]]></code>
    </macro>
    <macro name="Join-line" xml:space="preserve">
        <shortcut keystrokes="D-J"/>
        <code><![CDATA[caret-end-line
selection-down
selection-first-non-white
remove-selection]]></code>
    </macro>
    <macro name="print_r" xml:space="preserve">
        <shortcut keystrokes="INSERT$P"/>
        <code><![CDATA[copy-to-clipboard "print_r("
paste-from-clipboard ")"]]></code>
    </macro>
</editor-macros>
